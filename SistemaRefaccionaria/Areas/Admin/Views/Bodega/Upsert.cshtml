@model SistemaRefaccionaria.Modelos.Bodega
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Crear Bodega";
}

<!--Creamos el formulario de envío de informacin-->
<form method="post">
    <div style="padding-left:15%; padding-right:15%; padding-bottom:inherit.4rem;">
        <div class="row border-0">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
        </div>
        <!--Cambio de titulo de la pagina-->
        @if(Model.Id !=0)
        {
            //Actualizar 
            titulo = "Actualizar Bodega";
            <input type="hidden" asp-for="Id" />
        }
        <!--Mostramos el titulo de la página-->
        <div class="col-12 border-bottom p-0">
            <h2 class="text-primary">@titulo</h2>
        </div>
        <!--Campo Nombre-->
        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Nombre:</label>
                <input type="text" asp-for="Nombre" class="form-control" placeholder="Nombre de la Bodega"/>
                <span asp-validation-for="Nombre" class="text-danger"> </span>
            </div>
        </div>
        <!--Campo Descripcion-->
        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Descripción:</label>
                <input type="text" asp-for="Descripcion" class="form-control" placeholder="Descripcion de la Bodega" />
                <span asp-validation-for="Descripcion" class="text-danger"> </span>
            </div>
        </div>
        <!--Campo Descripcion-->
        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Estado:</label>
               <select asp-for="Estado" class="form-select">
                   <option value="true">Activo</option>
                   <option value="false">Inactivo</option>
               </select>
                <span asp-validation-for="Descripcion" class="text-danger"> </span>
            </div>
        </div>
        <!--Presentamos las vistas parciales-->
        <br />
        <div>
            @if(Model.Id !=0)
            {
                <partial name="_BotonesActualizarYRegresar" model="Model.Id" />
            }
            else
            {
                <partial name="_BotonesCrearYRegresar" />
            }
               

        </div>

    </div>
</form>

<!--Configuramos por medio de un script al dom para que use los helper tags-->
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
